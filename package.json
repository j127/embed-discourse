{
    "name": "@j127/embed-discourse",
    "version": "0.3.4",
    "description": "Embed Discourse topics on other websites",
    "main": "dist/index.cjs.js",
    "module": "dist/custom-elements/index.js",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/custom-elements/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/embed-discourse/embed-discourse.esm.js",
    "files": [
        "dist/",
        "loader/"
    ],
    "scripts": {
        "build": "stencil build --docs",
        "start": "stencil build --dev --watch --serve",
        "test": "stencil test --spec --e2e",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "generate": "stencil generate",
        "format": "npx prettier \"**/*.{ts,vue,js,json,jsx,tsx,css,scss,html}\" --write"
    },
    "dependencies": {
        "@stencil/core": "2.6.0"
    },
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@stencil/sass": "^1.4.1",
        "@types/jest": "^26.0.24",
        "@types/puppeteer": "^5.4.4",
        "jest": "^27.0.6",
        "jest-cli": "^27.2.5",
        "prettier": "^2.3.2",
        "puppeteer": "^10.2.0",
        "workbox-build": "^6.2.2"
    },
    "keywords": [
        "components",
        "webcomponents",
        "react",
        "vue",
        "stencil",
        "discourse"
    ],
    "homepage": "https://github.com/j127/embed-discourse#embed-discourse",
    "bugs": {
        "url": "https://github.com/j127/embed-discourse/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/j127/embed-discourse.git"
    }
}
